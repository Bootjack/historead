@require 'colors'

body
  background: $hst-light-gray
  color: $hst-gray
  font-family: sans-serif
  font-size: 16px

button
  background: $hst-accent-primary
  border: 1px solid $hst-white
  border-radius: 0.25rem
  color: $hst-white
  cursor: pointer
  font-size: 1rem
  padding: 0.25rem 1rem

form
  align-items: center
  display: flex
  flex-flow: row
  justify-content: center

  .fieldset
    margin: 0
    min-width: 0
    padding: 0

  input
    background: none;
    border: 0 solid $hst-white
    border-bottom-width: 1px
    color: $hst-white
    flex: 0 0 auto
    margin: 0.5rem
    text-align: center
    width: 5rem

*:disabled, *[class$="--disabled"]
  cursor: default
  opacity: 0.5
  pointer-events: none
